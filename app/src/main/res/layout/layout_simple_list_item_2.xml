<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/divider_land">

    <ImageView
        android:id="@+id/list_item_2_icon"
        android:layout_width="@dimen/list_item_2_icon_size"
        android:layout_height="@dimen/list_item_2_icon_size"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/icon_app" />

    <TextView
        android:id="@+id/list_item_2_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/list_item_2_icon"
        android:textColor="?attr/text_color"
        android:textSize="@dimen/font_size_20" />

</RelativeLayout>