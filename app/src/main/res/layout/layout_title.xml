<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/divider_title">

    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="TITLE"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/font_size_20" />

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title_title"
        android:layout_alignTop="@id/title_title"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:src="@drawable/selector_back"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/title_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:text="RIGHT"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/font_size_18"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/title_img_right"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:src="@drawable/photo_unlogin"
        android:visibility="gone"/>

</RelativeLayout>